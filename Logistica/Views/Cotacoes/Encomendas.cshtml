@model IEnumerable<Logistica.Models.Pedidos>

@{
	ViewBag.Title = "Encomendas";
}

<h2>Encomendas</h2>
<p>
	@Html.ActionLink("Encomendas", "Encomendas") | @Html.ActionLink("Por atribuir cotação", "EmEspera") | @Html.ActionLink("Cotadas", "Cotadas")
</p>
<table class="table">
	<tr>
		<th nowrap="">
			@Html.DisplayName("Nº de Encomenda")
		</th>
		<th nowrap="">
			@Html.DisplayName("Nome")
		</th>
		<th nowrap="">
			@Html.DisplayName("Apelido")
		</th>
		<th nowrap="">
			@Html.DisplayName("País")
		</th>
		<th nowrap="">
			@Html.DisplayName("Cidade")
		</th>
		<th nowrap="">
			@Html.DisplayName("Rua")
		</th>
		<th nowrap="">
			@Html.DisplayName("Nº da Porta")
		</th>
		<th nowrap="">
			@Html.DisplayName("Peso")
		</th>
		<th nowrap="">
			@Html.DisplayName("Comprimento")
		</th>
		<th nowrap="">
			@Html.DisplayName("Largura")
		</th>
		<th nowrap="">
			@Html.DisplayName("Altura")
		</th>
		<th nowrap="">
			@Html.DisplayName("Data de Entrega")
		</th>
		<th nowrap="">
			@Html.DisplayName("Estado")
		</th>
		<th nowrap="">
			@Html.DisplayName("Preço")
		</th>
		<th nowrap="">
			@Html.DisplayName("Transportadora")
		</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.ID)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.Nome)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.Apelido)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.PaisDestino)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CidadeDestino)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.RuaDestino)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.NumPortaDestino)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.Peso)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.Comprimento)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.Largura)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.Altura)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.DataEntregaPretendida)
			</td>
			<td nowrap="">
				@if (item.Estado == 0)
				{
					@Html.DisplayName("Por aceitar")
				}

				@if (item.Estado == 1)
				{
					@Html.DisplayName("Aceite")
				}

				@if (item.Estado == 2)
				{
					@Html.DisplayName("Em processamento pela transportadora")
				}

				@if (item.Estado == 3)
				{
					@Html.DisplayName("Em transito")
				}

				@if (item.Estado == 4)
				{
					@Html.DisplayName("Entregue")
				}

				@if (item.Estado == 5)
				{
					@Html.DisplayName("Por favor contacte a transportadora")
				}
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.Preco)
			</td>
			<td nowrap="">
				@Html.DisplayFor(modelItem => item.Transportadora.NomeTransportadora)
			</td>
			<td>
				@if (item.Estado != 4)
				{
					@Html.ActionLink("Alterar Estado", "Encomenda", new { id = item.ID })
				}
			</td>
		</tr>
	}
</table>
