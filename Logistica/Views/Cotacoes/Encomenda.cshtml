@model Logistica.Models.Pedidos

@{
	ViewBag.Title = "Encomenda";
}

<h2>Encomenda</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
<div class="form-horizontal">
	<h4>Cotacao</h4>



	<hr />
	<div class="form-group">
		@Html.Label("Estado", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.DropDownListFor(model => model.Estado, new List<SelectListItem>
			{
			   new SelectListItem{ Text="Em processamento pela transportadora", Value = "2" },
			   new SelectListItem{ Text="Em transito", Value = "3" },
			   new SelectListItem{ Text="Entregue", Value = "4" },
			   new SelectListItem{ Text="Por favor contacte a transportadora", Value = "5" }
			})
			@Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Save" class="btn btn-default" />
		</div>
	</div>
</div>
}

<div>
	@Html.ActionLink("Back to List", "Encomendas")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}

